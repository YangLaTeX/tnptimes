\DeclareMathSymbol{7}{\mathalpha}{tnptimes}{"37}
\DeclareMathSymbol{8}{\mathalpha}{tnptimes}{"38}
\DeclareMathSymbol{9}{\mathalpha}{tnptimes}{"39}

